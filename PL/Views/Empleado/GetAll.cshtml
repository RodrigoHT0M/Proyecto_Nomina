@model ML.Empleado
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAll</h1>


<div class="container">
    <div class="row">
        <div class="col-md-4">

            <a class="btn btn-success"
               href="@Url.Action("Form", "Empleado", new { IdEmpleado = 0 })">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill-add" viewBox="0 0 16 16">
                    <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0m-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                    <path d="M2 13c0 1 1 1 1 1h5.256A4.5 4.5 0 0 1 8 12.5a4.5 4.5 0 0 1 1.544-3.393Q8.844 9.002 8 9c-5 0-6 3-6 4" />
                </svg>
            </a>

        </div>

    </div>

    <div class="row mt-3">
        @if (Model.Empleados.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-success table-striped mt-3">
                    <thead class="table-light">
                        <tr>
                            <td>Imagen</td>

                            <td>Nombre</td>
                            <td>ApellidoPaterno</td>
                            <td>ApellidoMaterno</td>
                            <td>FechaNacimiento</td>
                            <td>RFC</td>
                            <td>NSS</td>
                            <td>CURP</td>
                            <td>Correo</td>
                            <td>FechaIngreso</td>
                            <td>SalarioBase</td>
                            <td>NoFaltas</td>
                            <td>Departamento</td>
                            <td>Editar</td>
                            <td>Eliminar</td>

                        </tr>


                    </thead>

                    @foreach (ML.Empleado obj in Model.Empleados)
                    {
                        <tbody>

                            <tr>
                                <td> <div class="d-flex align-items-center">

                                        @if (obj.Imagen != null)
                                        {

                                            <img src="data:image/png;base64,@Convert.ToBase64String(obj.Imagen)" id="imgUsuario" alt="" style="width: 135px; height: 135px" class="rounded-circle">


                                        }
                                        else
                                        {
                                            <img src="~/img/úser.png" alt="" style="width: 135px; height: 135px" class="rounded-circle">
                                        }

                                        
                                    </div></td>

                                <td>@obj.Nombre</td>
                                <td>@obj.ApellidoPaterno</td>
                                <td>@obj.ApellidoMaterno</td>
                                <td>@obj.FechaNacimiento</td>
                                <td>@obj.RFC</td>
                                <td>@obj.NSS</td>
                                <td>@obj.CURP</td>
                                <td>@obj.Correo</td>
                                <td>@obj.FechaIngreso</td>
                                <td>@obj.SalarioBase</td>
                                <td>@obj.NoFaltas</td>

                                <td>@obj.Departamento.Descripcion</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="ms-3">
                                            <a href="@Url.Action("Form", "Empleado", new { IdEmpleado = obj.IdEmpleado })" class="btn btn-outline-warning">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                                </svg>
                                            </a>

                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="ms-3">
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="UsuarioDelete(@obj.IdEmpleado, '@obj.Nombre')">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                                </svg>

                                            </button>

                                        </div>
                                    </div>
                                </td>

                            </tr>

                        </tbody>
                    }


                </table>
            </div>

        }
        else
        {
            <div class="row mt-2 alert-danger">
                No existen Empleados en la BD

            </div>
        }


    </div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Empleado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Estas seguro que deseas eliminar al Empleado: <span id="Empleado"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <a id="btnEliminarEmpleado" href="" class="btn btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>

        function UsuarioDelete(IdEmpleado, Nombre) {

        $('#Empleado').text(Nombre)
        $('#btnEliminarEmpleado').attr('href','@Url.Action("Delete", "Empleado")' + '?IdEmpleado=' + IdEmpleado)
    }

</script>

