@model ML.Permiso
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/js/TablaPermisos.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<h1>Lista De Permisos Pendientes</h1>

<div class="container-fluid">

    <div class="row mb-2">
    </div>
    <div class="col-md-4">

        <a class="btn btn-outline-success"
           href="@Url.Action("Form", "Permiso", new { IdPermiso = 0 })">
            <i class="bi bi-calendar-range"></i>
        </a>

    </div>

    <div class="row mt-3">


        @if (Model.Permisos.Count > 0)
        {

            <div class="table-responsive">
                <table id="TablePermisos" class="table table-bordered">



                    <thead class="table-dark">
                        <tr class="text-center">
                            <th>Empleado</th>
                            <th>Departamento</th>
                            <th>FechaDeSolicitud</th>
                            <th>FechaDeInicio</th>
                            <th>HoraDeInicio</th>
                            <th>FechaDeFin</th>
                            <th>HoraDeFin</th>
                            <th>Motivo</th>
                            <th rowspan="2">Status</th>

                        </tr>

                    </thead>
                    @foreach (ML.Permiso obj in Model.Permisos)
                    {
                        <tbody>


                            <tr id="@obj.IdPermiso" class="text-center">


                                <td>@obj.Empleado.Nombre  @obj.Empleado.ApellidoPaterno</td>
                                <td>@obj.Empleado.Departamento.Descripcion</td>
                                <td>@obj.FechaSolicitud</td>
                                <td>@obj.FechaInicio</td>
                                <td>@obj.HoraInicio</td>
                                <td>@obj.FechaFin</td>
                                <td>@obj.HoraFin</td>
                                <td>@obj.Motivo</td>


                                <td rowspan="2">
                                    <button type="button" class="btn btn-outline-success mb-2" onclick="ProcesarPermiso(2,this)"><i class="bi bi-check-circle"></i></button>
                                    <button type="button" class="btn btn-outline-danger" onclick="ProcesarPermiso(3,this)"><i class="bi bi-x-circle"></i></button>



                                </td>

                            </tr>

                        </tbody>
                    }


                </table>
            </div>

        }
        else
        {
            <div class="row mt-2 alert-danger">
                No hay permisos pendientes

            </div>
        }




    </div>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/ModuloPermisos.js" type="text/javascript"></script>